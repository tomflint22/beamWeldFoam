FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 100000;

boundaryField
{
    left
    {
        type            fixedFluxPressure;
    }
    right
    {
        type            totalPressure;
        p0              $internalField;
        value           $internalField;
    }
    bottom
    {
        type            fixedFluxPressure;
    }
    top
    {
        type            fixedFluxPressure;
    }
    frontAndBack
    {
        type            empty;
    }
}


