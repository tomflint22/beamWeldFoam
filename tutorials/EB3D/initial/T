FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 301.3;

boundaryField
{
    leftWall
    {
type            zeroGradient;
    }
    rightWall
    {
type            zeroGradient;

    }
    lowerWall
    {
type fixedGradient;
gradient uniform -1.0e2;
    }
    atmosphere
    {
type fixedGradient;
gradient uniform -1.0e2;
    }
    frontAndBack
    {
type            zeroGradient;
    }
    defaultFaces
    {
        type            empty;
    }
}

